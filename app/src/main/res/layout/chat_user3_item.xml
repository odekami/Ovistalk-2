<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="5dp">

    <ImageView
        android:id="@+id/list_avatar"
        android:layout_width="@dimen/avator_size"
        android:layout_height="@dimen/avator_size"
        android:scaleType="centerCrop"
        tools:src="@drawable/a" />

    <FrameLayout
        android:id="@+id/incoming_layout_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="60dp"
        android:layout_toRightOf="@+id/list_avatar"
        android:background="@drawable/balloon_incoming_normal">

        <TextView
            android:id="@+id/textview_time"
            style="@style/chat_timings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:text="11:15 PM" />

        <TextView
            android:id="@+id/textview_from"
            style="@style/chat_text_message_style"
            android:layout_width="match_parent"
            android:layout_gravity="top|left"
            android:autoLink="web"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:singleLine="false"
            android:text="Emailsd asd asda sdasd  sdas dasd asd "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_message"
            style="@style/chat_text_message_style"
            android:layout_width="wrap_content"
            android:autoLink="web"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="25dp"
            android:text="Rahul Agrawal is a good boy but he does not know what he wants." />

    </FrameLayout>
</RelativeLayout>
